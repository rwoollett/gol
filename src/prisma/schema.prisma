generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id        Int        @id @default(autoincrement())
  genId     String     @db.VarChar(50)
  row       Int        @default(-1)
  length    Int        @default(0)
  allocated Boolean    @default(false)
  rows      BoardRow[]

  @@unique([genId, row], name: "rowInGeneration")
}

model BoardRow {
  id     Int      @id @default(autoincrement())
  order  Int      @default(0)
  cols   String[]
  task   Task     @relation(fields: [taskId], references: [id])
  taskId Int
}

model TaskResult {
  id     Int              @id @default(autoincrement())
  genId  String           @db.VarChar(50)
  row    Int              @default(-1)
  length Int              @default(0)
  rows   BoardRowResult[]

  @@unique([genId, row], name: "rowResultInGeneration")
}

model BoardRowResult {
  id           Int        @id @default(autoincrement())
  order        Int        @default(0)
  cols         String[]
  taskResult   TaskResult @relation(fields: [taskResultId], references: [id])
  taskResultId Int
}
