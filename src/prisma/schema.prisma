generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id     Int        @id @default(autoincrement())
  genId  String     @unique @db.VarChar(50)
  row    Int        @default(-1)
  length Int        @default(0)
  rows   BoardRow[]
}

model BoardRow {
  id     Int      @id @default(autoincrement())
  cols   String[]
  task   Task     @relation(fields: [taskId], references: [id])
  taskId Int
}

model TaskResult {
  id     Int              @id @default(autoincrement())
  genId  String           @unique @db.VarChar(50)
  row    Int              @default(-1)
  length Int              @default(0)
  rows   BoardRowResult[]
}

model BoardRowResult {
  id           Int        @id @default(autoincrement())
  cols         String[]
  taskResult   TaskResult @relation(fields: [taskResultId], references: [id])
  taskResultId Int
}
